<script>
    document.addEventListener('DOMContentLoaded', () => {
        const slides = document.querySelectorAll('.slide');
        let currentSlide = 0;

        function showSlide(index) {
            slides.forEach((slide, i) => {
                if (i === index) {
                    slide.classList.add('active');
                } else {
                    slide.classList.remove('active');
                }
            });
            updateNavButtons();
        }

        function updateNavButtons() {
            const prevBtn = document.getElementById(`prevBtn${currentSlide + 1}`);
            const nextBtn = document.getElementById(`nextBtn${currentSlide + 1}`);
            const allPrevBtns = document.querySelectorAll('[id^="prevBtn"]');
            const allNextBtns = document.querySelectorAll('[id^="nextBtn"]');

            // Disable all buttons first
            allPrevBtns.forEach(btn => btn.classList.add('disabled'));
            allNextBtns.forEach(btn => btn.classList.add('disabled'));

            // Enable buttons for the current slide
            if (prevBtn) {
                prevBtn.classList.remove('disabled');
            }
            if (nextBtn) {
                nextBtn.classList.remove('disabled');
            }

            // Global logic for first and last slides
            if (currentSlide === 0) {
                document.getElementById('prevBtn').classList.add('disabled');
            } else {
                document.getElementById('prevBtn').classList.remove('disabled');
            }

            if (currentSlide === slides.length - 1) {
                document.getElementById('nextBtn5').classList.add('disabled');
            } else {
                document.getElementById('nextBtn5').classList.remove('disabled');
            }
        }
        
        document.querySelectorAll('[id^="prevBtn"]').forEach(button => {
            button.addEventListener('click', () => {
                if (currentSlide > 0) {
                    currentSlide--;
                    showSlide(currentSlide);
                }
            });
        });

        document.querySelectorAll('[id^="nextBtn"]').forEach(button => {
            button.addEventListener('click', () => {
                if (currentSlide < slides.length - 1) {
                    currentSlide++;
                    showSlide(currentSlide);
                }
            });
        });

        // Initial setup
        showSlide(currentSlide);
    });
</script>

</body>
